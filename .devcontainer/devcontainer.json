{
  "name": "c3-benchmarking",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh",
        "extensions.ignoreRecommendations": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pytest",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "remoteUser": "user",
  "workspaceFolder": "/home/user/",
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/user/c3-benchmarking,type=bind,consistency=cached"
  ],
  "updateRemoteUserUID": false
}
